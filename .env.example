# Kalshi API Configuration
KALSHI_ENVIRONMENT=demo                        # "demo" or "production"
KALSHI_API_KEY_ID=your-api-key-id-here
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi_private.pem

# AI Providers (optional -- needed for probability estimation)
KALSHI_ANTHROPIC_API_KEY=sk-ant-...
KALSHI_OPENAI_API_KEY=sk-...

# External Data Sources (optional)
FRED_API_KEY=your-fred-api-key
NOAA_API_TOKEN=your-noaa-token

# Scanner Defaults
KALSHI_SCAN_MIN_VOLUME_24H=100
KALSHI_SCAN_MIN_OPEN_INTEREST=50
KALSHI_SCAN_MAX_DAYS_TO_CLOSE=90

# Position Sizing
KALSHI_MAX_POSITION_PCT=0.05
KALSHI_KELLY_FRACTION=0.25
KALSHI_BANKROLL_CENTS=100000
